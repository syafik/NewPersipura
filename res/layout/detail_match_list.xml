<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_parent"
    android:background="#2B292A"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:background="@drawable/gradient_box"
        android:padding="10px" >

        <TextView
            android:id="@+id/findzoes_list_text_cellnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textSize="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/findzoes_list_text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/findzoes_list_text_name"
            android:layout_alignBottom="@+id/findzoes_list_text_name"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/findzoes_list_text_name"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:text="time"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/findzoes_list_text_name"
            android:layout_toRightOf="@+id/findzoes_list_text_address"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/findzoes_list_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:paddingTop="6dp"
            android:text="Title"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/findzoes_list_text_address"
            android:layout_alignBottom="@+id/findzoes_list_text_address"
            android:layout_toRightOf="@+id/ImageView01"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:text="time"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/TextView01"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/TextView01"
            android:paddingTop="6dp"
            android:text="Title"
            android:textSize="14dp" />

    </RelativeLayout>

</RelativeLayout>