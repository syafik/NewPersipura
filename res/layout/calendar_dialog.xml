<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#46434A"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B292A"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_dia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Calendar Detail"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" >
        </TextView>
        
    </LinearLayout>
    
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >
        
        <TableLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3">
            <TableRow >
                  <ImageView 
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:id="@+id/h_logo"
                  android:layout_gravity="left"
                  android:layout_marginRight="10dp"
                  android:src="@drawable/staff_placeholder2x"/>
                    <ImageView 
                  android:layout_width="80dp"
                  android:layout_height="40dp"
                  />
                      <ImageView 
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_gravity="right"
                  android:layout_marginLeft="20dp"
                  android:id="@+id/a_logo"
                  android:src="@drawable/staff_placeholder2x"/>
            </TableRow>
          <TableRow>
            
            <TextView
                android:id="@+id/club1"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:text="club1"/>
            <TextView
                android:id="@+id/vs_legend"
                android:layout_gravity="center_horizontal"
                android:text="VS"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/club2"
                android:layout_gravity="center_horizontal"
                android:text="club 2"/>
          </TableRow>
          <TableRow>
            <TextView
                android:id="@+id/score1"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:text="score 1"/>
            <TextView
                android:id="@+id/score_legend"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp" />
            <TextView
                android:id="@+id/score2"
                android:text="score 2"
                android:layout_gravity="center_horizontal" />
          </TableRow>
       </TableLayout>

        
    </LinearLayout>
    
     <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#696666" />
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            
            <Button 
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="#ccc"
                android:background="@drawable/tweet_button_background"
                />
            </RelativeLayout>
          
        

        
    </LinearLayout>
  
</LinearLayout>