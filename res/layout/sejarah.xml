<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    android:orientation="vertical" >

    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/logo"
        android:layout_marginTop="20dp" 
         >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/splash"
            android:contentDescription="@string/hello_world" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logo"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_klub" 
            />

        <TextView
            android:id="@+id/berdiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/berdiri_klub"
            />
        
        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alamat_klub" />
        
        <TextView
            android:id="@+id/telepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telepon_klub" />
        
        <TextView
            android:id="@+id/julukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/julukan_klub" />
        
        <TextView
            android:id="@+id/ketua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ketua_klub" />
        
        <TextView
            android:id="@+id/manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manager_klub" />
        
        <TextView
            android:id="@+id/pelatih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pelatih_klub" />
        
        <TextView
            android:id="@+id/stadion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stadion_klub" />
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dip"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient_box"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textViewList2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="21dp"

            android:ellipsize="none"
            android:singleLine="false"
            android:text="@string/hello_world"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>